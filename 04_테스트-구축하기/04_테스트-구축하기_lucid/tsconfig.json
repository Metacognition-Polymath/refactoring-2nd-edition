{
  "compilerOptions": {
    "allowJs": true,
    "target": "ES5",
    "module": "es6",
    "outDir": "./built",
    "moduleResolution": "Node",
    "noImplicitAny": true,
    "lib": [
      "ES2015",
      "DOM",                             
      "DOM.Iterable"
    ],
    "types": ["jest", "node"],
    "allowUnusedLabels": true,
    "skipLibCheck": true,
    //    "typeRoots": ["./node_modules/@types", "types"]
    "strict": true,
    "strictFunctionTypes": true
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}